<?xml version="1.0" encoding="utf-8" ?>
<ContentView
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:control="clr-namespace:Buddies.App.Layout.Controls"
    x:Class="Buddies.App.Layout.Logs.Sections.ConditionsLogSection">
	
    <VerticalStackLayout>
        
		<!-- Type of Entry -->
		<control:MultiSelect
			Title="Weather"
			Subtitle="How was the weather?" />
		
		<!-- Air Temperature -->
		<Entry />

		<!-- Surface Temperature -->
		<Entry />

		<!-- Bottom Temperature -->
		<Entry />
		
		<!-- Type of Water -->
		<control:MultiSelect
			Title="Type of Water"
			Subtitle="What type of water did you dive in?" />
		
		<!-- Body of Water -->
		<control:MultiSelect
			Title="Body of Water"
			Subtitle="How body of water did you dive in?" />
		
		<!-- Visibility -->
		<control:MultiSelect
			Title="Visibility"
			Subtitle="How was the visibility?" />

	</VerticalStackLayout>
	
</ContentView>
