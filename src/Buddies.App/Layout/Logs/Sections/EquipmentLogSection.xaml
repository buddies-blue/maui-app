<?xml version="1.0" encoding="utf-8" ?>
<ContentView
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:control="clr-namespace:Buddies.App.Layout.Controls"
    x:Class="Buddies.App.Layout.Logs.Sections.EquipmentLogSection">
	
    <VerticalStackLayout>
        
		<!-- Suit -->
		<control:MultiSelect
			Title="Suit"
			Subtitle="What suit did you wear?" />
		
		<!-- Additional Gear -->
		<control:MultiSelect
			Title="Additional Gear"
			Subtitle="What else did you wear?" />
		
		<!-- Weight -->
		<control:MultiSelect
			Title="Weight"
			Subtitle="How much weight did you use?" />
		
		<!-- Cylinder -->
		<control:MultiSelect
			Title="Cylinder"
			Subtitle="What kind of cylinder did you use?" />

		<!-- Cylinder Size -->
		<Entry Placeholder="Cylinder Size" />
		
		<!-- Gas Mixture -->
		<control:MultiSelect
			Title="Gas Mixture"
			Subtitle="What kind of gas mixture did you use?" />

		<!-- Oxygen -->
		<Entry Placeholder="Oxygen" />

		<!-- Nitrogen -->
		<Entry Placeholder="Nitrogen" />

		<!-- Helium -->
		<Entry Placeholder="Helium" />

		<!-- Hydrogen -->
		<Entry Placeholder="Hydrogen" />

		<!-- Starting Pressure -->
		<Entry Placeholder="Starting Pressure" />

		<!-- Ending Pressure -->
		<Entry Placeholder="Ending Pressure" />

		<!-- Amount Used -->
		<Entry IsReadOnly="True" />

	</VerticalStackLayout>
	
</ContentView>
